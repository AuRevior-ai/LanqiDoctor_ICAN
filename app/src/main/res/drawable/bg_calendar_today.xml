<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 边框颜色和宽度 -->
    <stroke
        android:width="2dp"
        android:color="#64B5F6" /> <!-- 浅蓝色边框 -->

    <!-- 圆角 -->
    <corners android:radius="4dp"/>

    <!-- 可选：设置一个轻微的背景色（如浅灰色） -->
    <solid android:color="#F0F4F8" />

</shape>