<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_security"
            android:layout_marginEnd="8dp"
            android:tint="@color/colorPrimary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="权限检查"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

    </LinearLayout>

    <!-- 说明文字 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="为了保证应用功能正常使用，需要您授予以下权限。必需权限为应用核心功能所必需，推荐权限可以提升使用体验。"
        android:textSize="14sp"
        android:textColor="@color/grey_600"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- 权限状态 -->
    <TextView
        android:id="@+id/tv_permission_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正在检查权限..."
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:background="@drawable/bg_permission_status"
        android:layout_marginBottom="16dp" />

    <!-- 权限列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_permissions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_retry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="重新检查"
            android:background="@drawable/button_outline_bg"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="继续使用"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
