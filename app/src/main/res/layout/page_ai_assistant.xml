<?xml version="1.0" encoding="utf-8"?>
<!-- AI助手页面 - 包含功能按钮和嵌入式聊天界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 功能按钮组 - 横排4个（仿照图三样式，放在AI助手上方） -->
    <LinearLayout
        android:id="@+id/ll_function_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 语音对话 - 蓝色荧光 -->
        <LinearLayout
            android:id="@+id/ll_voice_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/neon_blue">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/phone_ic"
                    android:contentDescription="语音对话"
                    app:tint="@android:color/white" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="语音对话"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- 症状轨迹可视化 - 橙色荧光 -->
        <LinearLayout
            android:id="@+id/ll_symptom_tracking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/neon_orange">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/calendar_ic"
                    android:contentDescription="症状轨迹可视化"
                    app:tint="@android:color/white" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="症状轨迹"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- 健康日报 - 青绿色荧光 -->
        <LinearLayout
            android:id="@+id/ll_photo_recognition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/neon_teal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/report_ic"
                    android:contentDescription="健康日报"
                    app:tint="@android:color/white" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="健康日报"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- 既往病史 - 绿色荧光 -->
        <LinearLayout
            android:id="@+id/ll_medical_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/neon_green">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/info_ic"
                    android:contentDescription="既往病史"
                    app:tint="@android:color/white" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="既往病史"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                android:textColor="@color/text_primary" />

        </LinearLayout>

    </LinearLayout>

    <!-- AI助手聊天界面 - 完全嵌入，无边框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blue_gradient_start">

        <!-- 顶部：AI助手头像和问候语 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white">

            <!-- 头像和问候语 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- AI助手头像 - 使用蓝岐应用图标 -->
                <ImageView
                    android:id="@+id/iv_ai_avatar"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/app_icon"
                    android:contentDescription="AI助手头像"
                    android:scaleType="centerCrop" />

                <!-- 问候语 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_12"
                    android:text="我是小蓝，你的智能健康助手~"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <!-- 智能推荐问题区域 -->
            <LinearLayout
                android:id="@+id/ll_suggestions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_12">

                <!-- 推荐问题1 -->
                <TextView
                    android:id="@+id/tv_suggestion_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="感冒咳嗽怎么办？"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/suggestion_bubble_background"
                    android:padding="@dimen/dp_12"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 推荐问题2 -->
                <TextView
                    android:id="@+id/tv_suggestion_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="发烧如何快速退烧？"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/suggestion_bubble_background"
                    android:padding="@dimen/dp_12"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 推荐问题3 -->
                <TextView
                    android:id="@+id/tv_suggestion_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="头痛的缓解方法？"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/suggestion_bubble_background"
                    android:padding="@dimen/dp_12"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 换一换按钮 -->
                <LinearLayout
                    android:id="@+id/ll_refresh_suggestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/dp_8"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@drawable/ic_refresh"
                        app:tint="@color/icon_tint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:text="换一换"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/icon_tint" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_line_color" />

            <!-- 聊天消息列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_chat_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_10"
                android:background="@color/blue_gradient_start" />

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_line_color" />

            <!-- 底部输入区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_12"
                android:gravity="center_vertical"
                android:background="@color/white">

                <!-- 相机图标 -->
                <ImageView
                    android:id="@+id/iv_camera_input"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:src="@drawable/camera_ic"
                    android:contentDescription="拍照输入"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/dp_4"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    app:tint="@color/icon_tint" />

                <!-- 输入框 -->
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/dp_12"
                    android:background="@drawable/edit_selector"
                    android:hint="发消息或按住说话..."
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:maxLines="3"
                    android:minHeight="@dimen/dp_40"
                    android:padding="@dimen/dp_10" />

                <!-- 发送按钮 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_send"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/dp_60"
                    android:text="发送" />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>

