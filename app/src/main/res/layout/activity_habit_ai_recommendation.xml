<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- 标题栏 -->
    <com.hjq.bar.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="AI推荐习惯"
        app:leftIcon="@drawable/arrows_left_ic"
        app:titleColor="@android:color/black"
        app:backgroundColor="@android:color/white" />

    <!-- 主要内容区域 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 内容区域 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomLayout"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- AI推荐标题 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🤖 AI智能推荐习惯"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- 健康信息摘要 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📊 您的健康档案"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2196F3"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_health_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="正在分析您的健康信息..."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:lineSpacingMultiplier="1.2"
                            android:minHeight="60dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- AI推荐结果 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRecommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="💡 AI推荐习惯"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:layout_marginBottom="12dp" />

                        <!-- 推荐习惯列表 -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewRecommendations"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"
                            android:scrollbars="none" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- 加载状态 -->
                <LinearLayout
                    android:id="@+id/layoutLoading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="visible">

                    <ProgressBar
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tv_loading_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI正在分析您的健康状况..."
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:gravity="center" />

                </LinearLayout>

                <!-- 错误状态 -->
                <LinearLayout
                    android:id="@+id/layoutError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="😔"
                        android:textSize="48sp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tv_error_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取推荐失败，请稍后重试"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_retry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重新获取推荐"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_selector"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- 底部按钮区域 -->
        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <Button
                android:id="@+id/btn_regenerate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="重新推荐"
                android:textColor="#2196F3"
                android:background="@drawable/button_outline_selector"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_add_selected"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="添加选中习惯"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_selector"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
