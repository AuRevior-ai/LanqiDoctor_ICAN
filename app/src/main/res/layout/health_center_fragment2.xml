<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 主内容容器 (原来的滚动内容) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_80">

            <!-- 这里是你原来的所有内容，保持不变 -->
            <!-- 症状轨迹可视化卡片 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_symptom_tracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_0"
                app:cardCornerRadius="@dimen/dp_20"
                app:cardElevation="@dimen/dp_12"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_20">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="症状轨迹可视化"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:text="设置个性化健康日历以启动服药提醒"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/iv_calendar"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:background="@drawable/function_button_background"
                        android:padding="@dimen/dp_20"
                        android:src="@drawable/calendar_ic"
                        android:contentDescription="日历"
                        app:tint="@color/icon_tint" />                        
                </LinearLayout>
                <!-- 保持原有内容不变 -->
            </androidx.cardview.widget.CardView>

            <!-- 功能按钮组 - 横排4个云朵样式 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- 语音对话 - 蓝色荧光 -->
                <LinearLayout
                    android:id="@+id/ll_voice_chat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="12dp"
                        app:cardBackgroundColor="@color/neon_blue">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/phone_ic"
                            android:contentDescription="语音对话"
                            app:tint="@android:color/white" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="语音对话"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="normal"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- 文字输入 - 橙色荧光 -->
                <LinearLayout
                    android:id="@+id/ll_text_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="12dp"
                        app:cardBackgroundColor="@color/neon_orange">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/edit_ic"
                            android:contentDescription="文字输入"
                            app:tint="@android:color/white" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="文字输入"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="normal"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- 健康日报 - 青绿色荧光 -->
                <LinearLayout
                    android:id="@+id/ll_photo_recognition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="12dp"
                        app:cardBackgroundColor="@color/neon_teal">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/report_ic"
                            android:contentDescription="健康日报"
                            app:tint="@android:color/white" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="健康日报"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="normal"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- 既往病史 - 绿色荧光 -->
                <LinearLayout
                    android:id="@+id/ll_medical_history"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="12dp"
                        app:cardBackgroundColor="@color/neon_green">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/info_ic"
                            android:contentDescription="既往病史"
                            app:tint="@android:color/white" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="既往病史"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="normal"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </LinearLayout>
            <!-- 个性目标设置卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                app:cardCornerRadius="@dimen/dp_20"
                app:cardElevation="@dimen/dp_12"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择你的个性目标："
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <!-- 目标选项 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:orientation="horizontal">

                        <!-- 在用药 -->
                        <LinearLayout
                            android:id="@+id/ll_goal_medicine"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/goal_button_background"
                            android:padding="@dimen/dp_12"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:src="@drawable/medical_ic"
                                android:contentDescription="在用药"
                                app:tint="@color/icon_tint" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:text="在用药"
                                android:textSize="@dimen/sp_11"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- 医嘱识别 -->
                        <LinearLayout
                            android:id="@+id/ll_goal_diagnosis"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/dp_8"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/goal_button_background"
                            android:padding="@dimen/dp_12"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:src="@drawable/camera_ic"
                                android:contentDescription="医嘱识别"
                                app:tint="@color/icon_tint" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:text="医嘱识别"
                                android:textSize="@dimen/sp_11"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- 拍照 -->
                        <LinearLayout
                            android:id="@+id/ll_goal_photo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/dp_8"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/goal_button_background"
                            android:padding="@dimen/dp_12"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:src="@drawable/ic_clock"
                                android:contentDescription="用户规划的每日服药时间"
                                app:tint="@color/icon_tint" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_6"
                                android:text="服药时间"
                                android:textSize="@dimen/sp_11"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        
    </androidx.core.widget.NestedScrollView>

    <!-- Fragment全屏容器 (初始隐藏) -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>