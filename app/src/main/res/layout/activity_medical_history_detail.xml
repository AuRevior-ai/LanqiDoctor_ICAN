<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_gradient_start">

    <!-- 标题栏 -->
    <com.hjq.bar.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="病史详情"
        app:leftIcon="@drawable/arrows_left_ic"
        app:titleColor="@android:color/black"
        app:backgroundColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 基本信息卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本信息"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp" />

                    <!-- 疾病名称 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="疾病名称："
                            android:textSize="16sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_disease_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="高血压"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <!-- 诊断时间 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="诊断时间："
                            android:textSize="16sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_diagnosis_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2024-01-01"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <!-- 严重程度 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="严重程度："
                            android:textSize="16sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_severity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="中度"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <!-- 治疗状况 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="治疗状况："
                            android:textSize="16sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_treatment_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="治疗中"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_orange_dark" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 医疗信息卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="医疗信息"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp" />

                    <!-- 就诊医院 -->
                    <LinearLayout
                        android:id="@+id/layout_hospital"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="就诊医院："
                            android:textSize="16sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_hospital"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="某某医院"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <!-- 主治医生 -->
                    <LinearLayout
                        android:id="@+id/layout_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="主治医生："
                            android:textSize="16sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_doctor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="张医生"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 症状和治疗卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="症状和治疗"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp" />

                    <!-- 主要症状 -->
                    <LinearLayout
                        android:id="@+id/layout_symptoms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="主要症状："
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_symptoms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="头痛、眩晕、心悸"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                    <!-- 治疗方案 -->
                    <LinearLayout
                        android:id="@+id/layout_treatment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="治疗方案："
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_treatment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="药物治疗+生活方式调整"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 备注信息卡片 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/layout_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注信息"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="定期复查，注意饮食控制"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
