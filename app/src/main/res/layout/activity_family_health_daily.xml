<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/health_gradient_background">

    <!-- 顶部导航栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_40"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16">

        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/arrows_left_ic"
            android:contentDescription="返回"
            app:tint="@color/text_on_blue" />

        <!-- 页面标题 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="健康日报"
            android:textColor="@color/text_on_blue"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本内容由'蓝心小v'智能体生成，不保证正确性，请仔细甄别，蓝岐医童开发团队不负任何责任"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_hint"
            android:gravity="center"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:lineSpacingExtra="@dimen/dp_2" />
    </RelativeLayout>

    <!-- 内容区域（卡片+滚动） -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_20"
        app:cardElevation="@dimen/dp_8"
        app:cardBackgroundColor="@color/card_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_24">

                <!-- 健康日报标题 -->
                <TextView
                    android:id="@+id/tv_report_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="家庭健康日报"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center" />
                <!-- 免责声明 -->


                <!-- 加载进度条 -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_16"/>

                <!-- 日报内容 -->
                <TextView
                    android:id="@+id/tv_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="健康日报内容"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text_secondary"
                    android:paddingTop="@dimen/dp_24"
                    android:lineSpacingExtra="@dimen/dp_4" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- 底部按钮（如需要） -->
    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/primary_button_background"
        android:text="分享日报"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:paddingVertical="@dimen/dp_16"
        android:visibility="gone" />

</LinearLayout>