<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- 权限状态图标 -->
    <ImageView
        android:id="@+id/iv_permission_status"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_error_circle" />

    <!-- 权限信息 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 权限名称和类型 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_permission_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="权限名称"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_permission_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="必需"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_permission_type"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

        </LinearLayout>

        <!-- 权限描述 -->
        <TextView
            android:id="@+id/tv_permission_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="权限描述"
            android:textSize="14sp"
            android:textColor="@color/grey_600"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- 权限状态文字 -->
    <TextView
        android:id="@+id/tv_permission_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:text="未授予"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
