<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:leftIcon="@drawable/arrows_left_ic"
        app:title="添加家庭成员" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 说明文字 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="请输入家庭成员的登录信息\n验证通过后将自动添加为家庭成员"
                android:textColor="@color/gray_666"
                android:textSize="14sp" />

            <!-- 邮箱输入 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="邮箱地址"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.hjq.widget.view.ClearEditText
                android:id="@+id/et_member_email"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="请输入家庭成员的邮箱地址"
                android:inputType="textEmailAddress"
                android:maxLength="100"
                android:singleLine="true" />

            <!-- 密码输入 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="登录密码"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.hjq.widget.view.PasswordEditText
                android:id="@+id/et_member_password"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="请输入家庭成员的登录密码"
                android:imeOptions="actionNext"
                android:maxLength="20"
                android:singleLine="true" />

            <!-- 昵称输入 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="家庭昵称"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.hjq.widget.view.ClearEditText
                android:id="@+id/et_member_nickname"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:hint="请输入家庭成员的昵称（如：爸爸、妈妈）"
                android:imeOptions="actionDone"
                android:maxLength="20"
                android:singleLine="true" />

            <!-- 隐私说明 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/tips_background"
                android:drawableStart="@drawable/info_ic"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="添加家庭成员后，您可以查看其健康数据和服药记录。请确保已获得对方同意。"
                android:textColor="@color/orange_600"
                android:textSize="12sp" />

            <!-- 添加按钮 -->
            <com.hjq.widget.view.SubmitButton
                android:id="@+id/btn_add_member"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="添加家庭成员" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>