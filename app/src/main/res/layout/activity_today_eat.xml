<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/health_gradient_background">

    <!-- 顶部导航栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_40"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16">

        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"

            android:padding="@dimen/dp_8"
            android:src="@drawable/arrows_left_ic"
            android:contentDescription="返回"
            app:tint="@color/text_on_blue" />
        <!-- android:background="@drawable/circle_white_background" -->
        <!-- 页面标题 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_toEndOf="@id/iv_back"
            android:layout_toStartOf="@id/iv_back"
            android:text="功能详情"
            android:textColor="@color/text_on_blue"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1" />

    </RelativeLayout>

    <!-- 内容区域 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_32"
        app:cardCornerRadius="@dimen/dp_20"
        app:cardElevation="@dimen/dp_8"
        app:cardBackgroundColor="@color/card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_24">

            <!-- 功能标题 -->
            <TextView
                android:id="@+id/tv_function_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="功能标题"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center" />

            <!-- 功能描述 -->
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="功能描述内容"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="@dimen/dp_8" />

            <!-- 返回按钮 -->
            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_32"
                android:background="@drawable/primary_button_background"
                android:text="返回首页"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:paddingVertical="@dimen/dp_16" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>