<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_100">

            <!-- 标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="处方单分析"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_16" />

            <!-- OCR识别结果卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_8"
                app:cardCornerRadius="@dimen/dp_16"
                app:cardElevation="@dimen/dp_8"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OCR识别结果："
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/dp_8" />

                    <TextView
                        android:id="@+id/tv_ocr_results"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_100"
                        android:background="@drawable/border_rounded"
                        android:padding="@dimen/dp_12"
                        android:scrollbars="vertical"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/text_secondary"
                        android:text="识别结果将显示在此处..."
                        android:layout_marginBottom="@dimen/dp_8" />

                    <EditText
                        android:id="@+id/et_ocr_results"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_100"
                        android:background="@drawable/border_rounded"
                        android:padding="@dimen/dp_12"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/text_primary"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:hint="可以在此编辑识别结果..."
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/dp_8" />

                    <!-- 操作按钮区域 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_8">

                        <Button
                            android:id="@+id/btn_edit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="编辑文本"
                            android:layout_marginEnd="@dimen/dp_8" />

                        <Button
                            android:id="@+id/btn_save"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="保存修改"
                            android:enabled="false"
                            android:visibility="gone"
                            android:layout_marginEnd="@dimen/dp_8" />

                        <Button
                            android:id="@+id/btn_analyze"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="智能提取药品"
                            android:background="@drawable/button_primary"
                            android:textColor="@color/white"
                            android:layout_marginEnd="@dimen/dp_8" />

                        <Button
                            android:id="@+id/btn_batch_add"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="批量添加"
                            android:background="@drawable/button_primary"
                            android:textColor="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 进度条 -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_8" />

            <!-- 分析结果卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                app:cardCornerRadius="@dimen/dp_16"
                app:cardElevation="@dimen/dp_8"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="分析结果："
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/dp_8" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_120">

                        <TextView
                            android:id="@+id/tv_analysis_results"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_rounded"
                            android:padding="@dimen/dp_12"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/text_secondary"
                            android:text="点击智能提取药品按钮开始分析..."
                            android:textIsSelectable="true" />
                    </ScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>