<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/health_gradient_background">

    <!-- 顶部导航栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_40"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16">

        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/arrows_left_ic"
            android:contentDescription="返回"
            app:tint="@color/text_on_blue" />

        <!-- 页面标题 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人健康画像"
            android:textColor="@color/text_on_blue"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1" />

    </RelativeLayout>

    <!-- 内容区域 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        app:cardCornerRadius="@dimen/dp_20"
        app:cardElevation="@dimen/dp_8">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_24">

                <!-- 进度条 -->
                <ProgressBar
                    android:id="@+id/progress_bar_health_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:visibility="gone" />

                <!-- 健康画像内容显示区域 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    app:cardCornerRadius="@dimen/dp_12"
                    app:cardElevation="@dimen/dp_4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_16">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏥 个人健康画像分析"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="@dimen/dp_12" />

                        <TextView
                            android:id="@+id/tv_health_profile_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="正在生成个人健康画像，请稍候..."
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingExtra="@dimen/dp_4" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- 功能说明 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💡 基于您的健康数据，AI将为您生成个性化健康画像，包括：\n\n• 健康状况综合评分\n• 各项指标详细分析\n• 健康风险识别与预警\n• 个性化改善建议\n• 健康目标制定"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text_hint"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:background="#F8F9FA"
                    android:padding="@dimen/dp_12"
                    app:cardCornerRadius="@dimen/dp_8" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>
