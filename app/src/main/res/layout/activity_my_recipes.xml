<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_gradient_start">

    <!-- 顶部导航栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_40"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16">

        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/arrows_left_ic"
            android:contentDescription="返回"
            app:tint="@color/text_on_blue" />

        <!-- 页面标题 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的食谱"
            android:textColor="@color/text_on_blue"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1" />

    </RelativeLayout>

    <!-- 内容区域 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        app:cardCornerRadius="@dimen/dp_20"
        app:cardElevation="@dimen/dp_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 周计划标题区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/dp_16"
                android:background="@color/bg_light_gray">

                <!-- 主标题 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本周食谱计划"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <!-- 日期范围 -->
                <TextView
                    android:id="@+id/tv_weekly_plan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="10月25日 - 10月31日"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- 下拉刷新容器 -->
            <com.scwang.smart.refresh.layout.SmartRefreshLayout
                android:id="@+id/smart_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <!-- 食谱列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recipes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_8"
                    android:clipToPadding="false" />

            </com.scwang.smart.refresh.layout.SmartRefreshLayout>

            <!-- 空视图 -->
            <LinearLayout
                android:id="@+id/ll_empty_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/dp_32"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:src="@drawable/ic_recipe_empty"
                    android:layout_marginBottom="@dimen/dp_16"
                    app:tint="@color/text_hint" />

                <TextView
                    android:id="@+id/tv_empty_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无食谱数据\n下拉刷新生成AI推荐食谱"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_hint"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/dp_4" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
