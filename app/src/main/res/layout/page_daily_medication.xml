<?xml version="1.0" encoding="utf-8"?>
<!-- 日常服药页面 - 个性目标设置 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_gradient_start"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <!-- 个性目标设置卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_20"
            app:cardElevation="@dimen/dp_12"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择你的个性目标："
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <!-- 目标选项 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <!-- 在用药 -->
                    <LinearLayout
                        android:id="@+id/ll_goal_medicine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/goal_button_background"
                        android:padding="@dimen/dp_12"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:src="@drawable/medical_ic"
                            android:contentDescription="在用药"
                            app:tint="@color/icon_tint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="在用药"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- 医嘱识别 -->
                    <LinearLayout
                        android:id="@+id/ll_goal_diagnosis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/dp_8"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/goal_button_background"
                        android:padding="@dimen/dp_12"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:src="@drawable/camera_ic"
                            android:contentDescription="医嘱识别"
                            app:tint="@color/icon_tint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="医嘱识别"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- 服药时间 -->
                    <LinearLayout
                        android:id="@+id/ll_goal_photo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_8"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/goal_button_background"
                        android:padding="@dimen/dp_12"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:src="@drawable/ic_clock"
                            android:contentDescription="服药时间"
                            app:tint="@color/icon_tint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="服药时间"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>

