<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 标题栏 -->
    <com.hjq.bar.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="偏好设置"
        app:leftIcon="@drawable/arrows_left_ic"
        app:titleColor="@android:color/black"
        app:backgroundColor="@android:color/white" />

    <!-- 设置选项列表 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <!-- 通知设置分组 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="通知设置"
                android:textSize="@dimen/sp_14"
                android:textColor="#666666"
                android:textStyle="bold" />

            <!-- 推送通知 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/ll_push_notification"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dp_16">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/info_ic"
                        app:tint="@color/common_accent_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_12"
                        android:text="推送通知"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16" />

                    <Switch
                        android:id="@+id/switch_push_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 健康提醒 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/ll_health_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dp_16">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/bedtime_ic"
                        app:tint="@color/common_accent_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_12"
                        android:text="健康提醒"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16" />

                    <Switch
                        android:id="@+id/switch_health_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 用药提醒 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_24"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/ll_medication_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dp_16">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/add_ic"
                        app:tint="@color/common_accent_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_12"
                        android:text="用药提醒"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16" />

                    <Switch
                        android:id="@+id/switch_medication_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 界面设置分组 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="界面设置"
                android:textSize="@dimen/sp_14"
                android:textColor="#666666"
                android:textStyle="bold" />

            <!-- 语言设置 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/ll_language"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dp_16">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/globe_ic"
                        app:tint="@color/common_accent_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_12"
                        android:text="语言"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_language_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="简体中文"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginEnd="@dimen/dp_8" />

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@drawable/arrows_right_ic"
                        app:tint="#CCCCCC"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 主题设置 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_24"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/ll_theme"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dp_16">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/assessment_ic"
                        app:tint="@color/common_accent_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_12"
                        android:text="主题"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_theme_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自动"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginEnd="@dimen/dp_8" />

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@drawable/arrows_right_ic"
                        app:tint="#CCCCCC"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 数据设置分组 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="数据设置"
                android:textSize="@dimen/sp_14"
                android:textColor="#666666"
                android:textStyle="bold" />

            <!-- 自动同步 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/ll_auto_sync"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dp_16">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/reboot_ic"
                        app:tint="@color/common_accent_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_12"
                        android:text="自动同步健康数据"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16" />

                    <Switch
                        android:id="@+id/switch_auto_sync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            
            <!-- 同步状态显示 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/family_member_card_background"
                android:layout_margin="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据同步"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/tv_sync_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="同步状态：获取中..."
                    android:textSize="14sp"
                    android:textColor="@color/gray_666" />
                
                <Button
                    android:id="@+id/btn_reset_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="重置同步状态"
                    android:textSize="12sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                
            </LinearLayout>
            
            <!-- 在自动同步开关下方添加手动同步按钮 -->
            <Button
                android:id="@+id/btn_manual_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="立即同步数据"
                android:background="@drawable/button_rect_selector"
                android:textColor="@android:color/white"
                android:enabled="false" />

            <!-- 隐私级别 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_24"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/ll_privacy_level"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dp_16">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/safe_ic"
                        app:tint="@color/common_accent_color"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_12"
                        android:text="隐私级别"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_privacy_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好友可见"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginEnd="@dimen/dp_8" />

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@drawable/arrows_right_ic"
                        app:tint="#CCCCCC"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>