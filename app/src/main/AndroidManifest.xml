<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lanqiDoctor.demo">
    <!-- 网络相关 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 外部存储 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" /> <!-- 拍照权限 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 安装权限 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" /> <!-- 定位权限（用于 WebView 定位） -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- 闹钟权限 -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <!-- 使用震动 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!--声音权限-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- 后台启动Activity权限（Android 10+） -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 应用启动权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- Android 13+ 通知权限 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- LLM硬件加速 -->
    <uses-permission android:name="mediatek.permission.ACCESS_APU_SYS" 
                     android:required="false" />
    <application
        android:name="com.lanqiDoctor.demo.app.AppApplication"
        android:allowBackup="false"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:resizeableActivity="true"
        android:roundIcon="@mipmap/launcher_ic"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup,LockedOrientationActivity"
        tools:replace="android:allowBackup,android:supportsRtl"
        tools:targetApi="n">

        <!-- 表示当前已经适配了分区存储 -->
        <meta-data
            android:name="ScopedStorage"
            android:value="true" />

        <!-- 适配 Android 7.0 文件意图 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- 闪屏页 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.SplashActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme"
            android:exported="true">

            <!-- 程序入口 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- 引导页 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.GuideActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 首页 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.HomeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <!-- 登录页 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.LoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <!-- 注册页 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.RegisterActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <!-- 崩溃展示（必须在独立进程） -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.CrashActivity"
            android:launchMode="singleTop"
            android:process=":crash"
            android:screenOrientation="landscape" />

        <!-- 重启应用（必须在独立进程） -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.RestartActivity"
            android:launchMode="singleTop"
            android:process=":restart" />

        <!-- 设置页 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.SettingActivity"
            android:label="@string/setting_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 权限检查页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.PermissionCheckActivity"
            android:label="权限检查"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!-- 忘记密码 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.PasswordForgetActivity"
            android:label="@string/password_forget_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <!-- 重置密码 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.PasswordResetActivity"
            android:label="@string/password_reset_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <!-- OCR医嘱识别 -->
        <activity
            android:name="com.lanqiDoctor.demo.ocr.OCRActivity"
            android:label="医嘱识别"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 处方分析页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ocr.PrescriptionAnalysisActivity"
            android:label="处方分析"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- 更换手机 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.PhoneResetActivity"
            android:label="@string/phone_reset_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <!-- 关于我们 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.AboutActivity"
            android:label="@string/about_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 个人资料 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.PersonalDataActivity"
            android:label="@string/personal_data_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 网页浏览 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.BrowserActivity"
            android:label="@string/web_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 拍照选择 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.CameraActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 图片裁剪 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.ImageCropActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 图片选择 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.ImageSelectActivity"
            android:label="@string/image_select_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 查看大图 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.ImagePreviewActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 播放视频（自适应方向） -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.VideoPlayActivity"
            android:launchMode="singleTop"
            android:theme="@style/FullScreenTheme" />

        <!-- 播放视频（竖屏方向） -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.VideoPlayActivity$Portrait"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenTheme" />

        <!-- 播放视频（横屏方向） -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.VideoPlayActivity$Landscape"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@style/FullScreenTheme" />

        <!-- 选择视频 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.VideoSelectActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 对话框案例 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.DialogActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 状态案例 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.StatusActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 微信回调（请注意这个 Activity 放置的包名要和当前项目的包名保持一致，否则将不能正常回调） -->
        <activity
            android:name="com.lanqiDoctor.demo.wxapi.WXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- 闹钟设置 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.ClockActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 闹钟广播接收器 -->
        <receiver android:name="com.lanqiDoctor.demo.ui.activity.ClockActivity$AlarmReceiver"
                android:enabled="true"
                android:exported="false">
                <intent-filter>
                <action android:name="com.lanqiDoctor.demo.ALARM_ACTION" />
                </intent-filter>
        </receiver>

        <!-- 健康管理主页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.HealthMainActivity"
            android:label="蓝岐健康提醒"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 健康功能详情页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.HealthFunctionActivity"
            android:label="健康功能详情"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 用户信息页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.UserProfileActivity"
            android:label="用户信息"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 用户偏好设置页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.UserPreferencesActivity"
            android:label="偏好设置"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <!-- 本地 LLM 管理页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.LocalLLMActivity"
            android:label="本地 LLM"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 用药管理页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.MedicationManagementActivity"
            android:label="用药管理"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 添加用药页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.AddMedicationActivity"
            android:label="添加用药"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- 用药详情页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.MedicationDetailActivity"
            android:label="用药详情"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
            
        <!-- 用户健康信息设置页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.UserHealthInfoActivity"
            android:label="健康信息设置"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- 个人健康画像页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.HealthProfileActivity"
            android:label="个人健康画像"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 我的食谱页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.MyRecipesActivity"
            android:label="我的食谱"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 习惯培养页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.HabitBuildingActivity"
            android:label="习惯培养"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 添加习惯页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.AddHabitActivity"
            android:label="添加习惯"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- 习惯详情页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.HabitDetailActivity"
            android:label="习惯详情"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 习惯AI推荐页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.HabitAiRecommendationActivity"
            android:label="AI推荐习惯"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 添加家庭成员页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.AddFamilyMemberActivity"
            android:label="添加家庭成员"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- 语音通话界面 -->
        <activity
            android:name=".ui.activity.RealtimeDialogActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <!-- 亲友今日服药页面 -->
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.FriendTodayMedicationActivity"
            android:label="亲友今日服药"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.MonthCalendarActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.TodayEatActivity"
            android:exported="false" />
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.PrivateActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.ChatActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.ChatLlmActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.FamilyHealthDaily"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.MobileHealthDaily"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.MedicalHistoryActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.AddMedicalHistoryActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.MedicalHistoryDetailActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.MedicalReportActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.lanqiDoctor.demo.ui.activity.TodayMedicationActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
    </application>

    <!-- Android 11 软件包可见性适配：https://www.jianshu.com/p/d1ccd425c4ce -->
    <queries>

        <!-- 拍照意图：MediaStore.ACTION_IMAGE_CAPTURE -->
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>

        <!-- 拍摄意图：MediaStore.ACTION_VIDEO_CAPTURE -->
        <intent>
            <action android:name="android.media.action.VIDEO_CAPTURE" />
        </intent>

        <!-- 图片裁剪意图 -->
        <intent>
            <action android:name="com.android.camera.action.CROP" />
        </intent>

        <!-- 打电话意图：Intent.ACTION_DIAL -->
        <intent>
            <action android:name="android.intent.action.DIAL" />
        </intent>

        <!-- 调起分享意图：Intent.ACTION_SEND -->
        <intent>
            <action android:name="android.intent.action.SEND" />
        </intent>

        <!-- 调起其他页面意图：Intent.ACTION_VIEW -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
        </intent>

        <!-- 调起系统文件选择器：Intent.ACTION_GET_CONTENT -->
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />
        </intent>
    </queries>
</manifest>